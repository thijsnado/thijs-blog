<h1>Listing posts</h1>

<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Published at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.published_at %></td>
    <td>
      <%= link_to 'Show', post, class: 'btn' %>
      <%= link_to 'Edit', edit_post_path(post), class: 'btn' %>
      <%= link_to 'Destroy', post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
