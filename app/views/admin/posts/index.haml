%h1 Listing posts
= link_to 'New Post', new_post_path
%table.table.table-hover
  %tr
    %th Title
    %th Published at
    %th
    %th
    %th
  - @posts.each do |post|
    %tr
      %td= post.title
      %td= post.published_at
      %td
        = link_to 'Show', post, class: 'btn'
        = link_to 'Edit', edit_post_path(post), class: 'btn'
        = link_to 'Destroy', post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' }
%br/
